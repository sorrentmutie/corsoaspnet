@model IEnumerable<DemoMVC.ViewModels.ViewModelFornitore>


<div style="margin-top: 10px; margin-bottom: 10px">
    <a class="btn btn-info" href="/Suppliers/Create">Crea Noovo</a>
</div>

<table class="table table-bordered table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Città)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefono)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Città)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefono )
        </td>
        <td>
            @Html.ActionLink("Modifica", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Dettagli", "Details", new { id=item.Id }) |
            @Html.ActionLink("Cancella", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
